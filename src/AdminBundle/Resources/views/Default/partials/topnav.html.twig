                    </ul>
                </li>
                    {# Language switcher #}
                {% for locale in locales.getLocales() %}
                    <li>
                        <a href="{{ path(app.request.attributes.get("_route"), app.request.attributes.get("_route_params")|merge({"_locale": locale})) }}">
                            {% if app.request.locale %}
                                {{ locale|capitalize }}
                            {% endif %}
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </nav>
    </div>
</div>