<div class="formItem {{ field.field_class|default('') }}">
    <label>
    {% if field.label_before|default(0) %}
    <div class="formKey">
        {% if field.label|default('') %}{{ field.label|trans }}{% endif %}{% if field.required|default(0) %}<span class="required">*</span>{% endif %}
    </div>{% endif %}<div class="formValue">
        <input type="hidden" name="{{ field.name|default('') }}" value="0">
        <input type="checkbox" name="{{ field.name|default('') }}" value="{{ field.value|default(1) }}" data-error="{{ field.error|default('') }}"
        {% if field.onchange|default('') %}onchange="{{ field.onchange }}"{% endif %}
        >
        {% if field.description|default('') %}<div class="formDescription">{{ field.description }}</div>{% endif %}
    </div>{% if not field.label_before|default(0) %}<div class="formKey">
        {% if field.label|default('') %}{{ field.label|trans }}{% endif %}{% if field.required|default(0) %}<span class="required">*</span>{% endif %}
    </div>{% endif %}
    </label>
</div>